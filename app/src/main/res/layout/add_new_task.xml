<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddNewTask">

    <EditText
        android:id="@+id/taskDescription"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:hint="Write your Task here..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/DateButton"
        android:layout_width="167dp"
        android:layout_height="44dp"
        android:text="Set Due Date"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/taskDescription"
        app:layout_constraintTop_toBottomOf="@+id/taskDescription"
        app:layout_constraintEnd_toStartOf="@+id/TimeButton"/>

    <Button
        android:id="@+id/TimeButton"
        android:layout_width="167dp"
        android:layout_height="44dp"
        android:text="Set Due Time"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/DateButton"
        app:layout_constraintTop_toBottomOf="@+id/taskDescription"
        app:layout_constraintEnd_toEndOf="@+id/taskDescription"/>

    <Button
        android:id="@+id/Savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Task"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/DateButton"
        app:layout_constraintStart_toStartOf="@+id/taskDescription"
        app:layout_constraintEnd_toEndOf="@+id/taskDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>
